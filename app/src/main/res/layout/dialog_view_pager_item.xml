<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/dialog_view_pager_pic_count"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/black"
            android:elevation="0.1dp"
            android:background="@drawable/photo_count_shape"
            app:layout_constraintTop_toTopOf="@id/dialog_view_pager_photo"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="32dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="1/2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/dialog_view_pager_photo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:contentDescription="@null"
            android:layout_width="match_parent"
            android:layout_height="@dimen/article_photo_size"/>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/news_root"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/news_item_icon"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:src="@drawable/right_arrow"
        android:layout_width="20sp"
        android:layout_height="20sp"/>

    <com.collect.collectpeak.custom_widget.CollectPeakTextView
        android:id="@+id/news_item_title"
        android:textSize="18sp"
        android:text="djsaklfj;a"
        android:textColor="@color/news_blue"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintRight_toLeftOf="@id/news_item_icon"
        app:layout_constraintBottom_toTopOf="@id/news_item_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintVertical_chainStyle="spread"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <com.collect.collectpeak.custom_widget.CollectPeakTextView
        android:id="@+id/news_item_content"
        android:textSize="14sp"
        android:text="djsaklfj;a"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/news_item_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/news_item_title"
        app:layout_constraintRight_toLeftOf="@id/news_item_icon"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>




    <View
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_height="1dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
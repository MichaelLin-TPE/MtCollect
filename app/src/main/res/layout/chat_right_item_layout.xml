<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.collect.collectpeak.custom_widget.CollectPeakTextView
        android:id="@+id/chat_right_text"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/chat_shap_right"
        android:text="fdsafdsafdasfafdsaf"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:gravity="start|center"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <com.collect.collectpeak.custom_widget.CollectPeakTextView
        android:id="@+id/chat_time"
        android:text="15:30PM"
        app:layout_constraintBottom_toBottomOf="@id/chat_right_text"
        app:layout_constraintRight_toLeftOf="@id/chat_right_text"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
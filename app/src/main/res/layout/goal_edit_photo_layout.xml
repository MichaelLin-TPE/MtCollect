<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/goal_edit_photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:riv_corner_radius="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <ImageView
        android:id="@+id/goal_edit_close"
        android:contentDescription="@null"
        android:src="@drawable/close"
        app:layout_constraintBottom_toTopOf="@id/goal_edit_photo"
        app:layout_constraintTop_toTopOf="@id/goal_edit_photo"
        app:layout_constraintRight_toRightOf="@id/goal_edit_photo"
        app:layout_constraintLeft_toRightOf="@id/goal_edit_photo"
        android:layout_width="15dp"
        android:layout_height="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
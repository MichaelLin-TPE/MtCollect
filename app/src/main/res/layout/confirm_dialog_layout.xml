<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/weather_spinner_shape"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <com.collect.collectpeak.custom_widget.CollectPeakTextView
        android:id="@+id/confirm_dialog_title"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        tools:text="djaklfjd;asjf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.collect.collectpeak.custom_widget.CollectPeakTextView
        android:id="@+id/confirm_dialog_confirm"
        app:layout_constraintTop_toBottomOf="@id/confirm_dialog_title"
        android:layout_marginTop="32dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.collect.collectpeak.custom_widget.CollectPeakTextView
        android:id="@+id/confirm_dialog_cancel"
        app:layout_constraintTop_toBottomOf="@id/confirm_dialog_title"
        android:layout_marginTop="32dp"
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@id/confirm_dialog_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="32dp"
        android:text="@string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>
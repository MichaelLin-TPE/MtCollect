<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/chat_photo"
        app:riv_oval="true"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="@id/chat_right_text"
        app:layout_constraintBottom_toBottomOf="@id/chat_right_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        android:layout_width="30dp"
        android:visibility="visible"
        android:layout_height="30dp"/>


    <com.collect.collectpeak.custom_widget.CollectPeakTextView
        android:id="@+id/chat_time"
        android:text="15:30PM"
        app:layout_constraintBottom_toBottomOf="@id/chat_right_text"
        app:layout_constraintLeft_toRightOf="@id/chat_right_text"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.collect.collectpeak.custom_widget.CollectPeakTextView
        android:id="@+id/chat_right_text"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@id/chat_photo"
        android:background="@drawable/chat_shap_left"
        android:text="fdsafdsafdasfafdsaf"
        android:gravity="start|center"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>





</androidx.constraintlayout.widget.ConstraintLayout>
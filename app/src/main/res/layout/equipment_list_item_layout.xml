<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/equipment_item_click"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/weather_spinner_shape"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <com.collect.collectpeak.custom_widget.CollectPeakTextView
            android:id="@+id/equipment_item_name"
            android:textSize="25sp"
            android:textColor="@color/black"
            tools:text="Title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <com.collect.collectpeak.custom_widget.CollectPeakTextView
            android:id="@+id/equipment_item_info"
            android:textSize="18sp"
            tools:text="需要準備的項目為：8 樣裝備"
            app:layout_constraintTop_toBottomOf="@id/equipment_item_name"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="@id/equipment_item_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>






    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>